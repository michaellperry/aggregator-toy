{
  "name": "aggregator-toy",
  "version": "1.0.0",
  "description": "Playground for building a composable aggregator",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:types": "tsd --files \"src/test/**/*.test-d.ts\"",
    "watch:pipeline": "nodemon --watch src --ext ts --exec 'ts-node src/run-pipeline.ts sample-input.json output.json'",
    "stop:pipeline": "pkill -f 'nodemon.*watch:pipeline' || echo 'No watch:pipeline process found'"
  },
  "author": "Michael L Perry",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsd": "^0.33.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@stablelib/base64": "^1.0.1",
    "@stablelib/sha512": "^1.0.1",
    "@stablelib/utf8": "^1.0.2"
  }
}
